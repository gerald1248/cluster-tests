for namespace in ${USER_NAMESPACES}; do
  for pod in `kubectl get po -n ${namespace} --no-headers 2>/dev/null | cut -d' ' -f1`; do
    uid=`kubectl exec -n ${namespace} ${pod} -- id -u`
    if [ "${uid}" -eq "0" ]; then
      echo "pod ${pod} in namespace ${namespace} runs as root"
      exit 1
    fi
  done
done
